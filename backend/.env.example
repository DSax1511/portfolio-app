# Backend Configuration - Copy to .env and update values

# ============= Security =============
SECRET_KEY=change-me-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============= Paths =============
DATA_CACHE_DIR=./data_cache
RUNS_DIR=./runs
PRESETS_PATH=./presets.json
DEFAULT_LOOKBACK_YEARS=3

# ============= CORS & Deployment =============
# Frontend origins (comma-separated for production)
FRONTEND_ORIGINS=http://localhost:5173,http://localhost:4173
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:4173,http://localhost:8000

# ============= Rate Limiting (requests per minute) =============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BACKTEST=10
RATE_LIMIT_OPTIMIZATION=20

# ============= Environment =============
ENVIRONMENT=development
